---
import MainPage from '../layouts/MainPage.astro';
import GameList from '../components/GameList/GameList.astro';
import DataBox from '../components/DataBox/DataBox.astro';
import Toolbar from '../components/Toolbar/Toolbar.astro';

import games from '../data/action.json';
const filteredGames = games.filter(game => game.tags?.includes('action'));
---
<MainPage title="Action Games">
  <Toolbar heading="Action Games"/>
  <GameList games={filteredGames} />
  <DataBox games={filteredGames} id="game_data_json"/>
</MainPage>

